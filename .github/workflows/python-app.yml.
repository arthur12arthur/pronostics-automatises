name: Run Pronostics

on:
  schedule:
    - cron: "0 9 * * *"   # Tous les jours Ã  9h UTC
  workflow_dispatch:       # Lancer manuellement si besoin

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v3

      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.10'

      - name: Install dependencies
        run: |
          pip install pandas gspread google-auth requests

      - name: Run script
        run: |
          python main.py
